<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>spring_mysql_jetty</groupId>
  <artifactId>spring_mysql_jetty</artifactId>
  <version>1.0-SNAPSHOT</version>
  <build>
    <resources>
      <resource>
        <filtering>true</filtering>
        <directory>src/main/resources</directory>
      </resource>
    </resources>
    <finalName>dspmetadata</finalName>
    <plugins>
      <plugin>
        <artifactId>maven-jar-plugin</artifactId>
        <configuration>
          <archive>
            <manifest>
              <mainClass>com.platform.controller.service.Bootstrap</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>make-assembly</id>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <descriptors>
            <descriptor>src/main/resources/assembly.xml</descriptor>
          </descriptors>
          <archive>
            <manifest>
              <mainClass>com.platform.controller.service.Bootstrap</mainClass>
            </manifest>
          </archive>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.mybatis.generator</groupId>
        <artifactId>mybatis-generator-maven-plugin</artifactId>
        <version>1.3.1</version>
        <configuration>
          <verbose>true</verbose>
          <overwrite>true</overwrite>
          <configurationFile>${basedir}/src/main/resources/generator/generator.xml</configurationFile>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-surefire-plugin</artifactId>
        <configuration>
          <skip>true</skip>
          <includes>
            <include>**/*Test.java</include>
            <include>**/*TestMock.java</include>
          </includes>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
        <version>2.3.2</version>
        <configuration>
          <encoding>UTF-8</encoding>
          <source>1.8</source>
          <target>1.8</target>
          <showWarnings>true</showWarnings>
        </configuration>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <version>2.1</version>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <transformers>
                <transformer>
                  <mainClass>com.platform.controller.service.Bootstrap</mainClass>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.handlers</resource>
                </transformer>
                <transformer>
                  <resource>META-INF/spring.schemas</resource>
                </transformer>
              </transformers>
              <filters>
                <filter>
                  <artifact>*:*</artifact>
                  <excludes>
                    <exclude>META-INF/*.SF</exclude>
                    <exclude>META-INF/*.DSA</exclude>
                    <exclude>META-INF/*.RSA</exclude>
                  </excludes>
                </filter>
              </filters>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <profiles>
    <profile>
      <id>dev</id>
      <build>
        <filters>
          <filter>${basedir}/src/main/filter/dev.properties</filter>
        </filters>
      </build>
      <properties>
        <env>dev</env>
      </properties>
    </profile>
    <profile>
      <id>dev-beta</id>
      <build>
        <filters>
          <filter>${basedir}/src/main/filter/dev-beta.properties</filter>
        </filters>
      </build>
      <properties>
        <env>dev-beta</env>
      </properties>
    </profile>
    <profile>
      <id>test</id>
      <build>
        <filters>
          <filter>${basedir}/src/main/filter/test.properties</filter>
        </filters>
      </build>
      <properties>
        <env>test</env>
      </properties>
    </profile>
    <profile>
      <id>prod</id>
      <build>
        <filters>
          <filter>${basedir}/src/main/filter/prod.properties</filter>
        </filters>
      </build>
      <properties>
        <env>prod</env>
      </properties>
    </profile>
  </profiles>
  <repositories>
    <repository>
      <id>mvnrepository</id>
      <url>http://mvnrepository.com</url>
    </repository>
    <repository>
      <id>local-nexus-releases</id>
      <name>Local Nexus Repository</name>
      <url>http://172.16.26.237:8081/nexus/content/repositories/releases</url>
    </repository>
  </repositories>
  <dependencies>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>4.12</version>
      <scope>test</scope>
    </dependency>
  </dependencies>
  <properties>
    <jedis.version>2.2.1</jedis.version>
    <logback.version>1.0.0</logback.version>
    <guava.version>15.0</guava.version>
    <spring.version>4.1.4.RELEASE</spring.version>
    <slf4j.version>1.6.4</slf4j.version>
    <com.alibaba.fastjson>1.1.15</com.alibaba.fastjson>
    <jackson.version>2.2.2</jackson.version>
  </properties>
</project>

